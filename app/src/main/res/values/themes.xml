<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mallnav" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
        <item name="android:textColorHighlight">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="materialAlertDialogTheme">@style/Theme.Mallnav.Dialog</item>
        <item name="android:fontFamily">@font/circe_reg</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Mallnav.BottomSheet.Theme</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:listChoiceBackgroundIndicator">@color/colorPrimaryLight</item>
    </style>

    <style name="Theme.Mallnav.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogBodyTextStyle">@style/Theme.Mallnav.Dialog.Body</item>
    </style>

    <style name="Theme.Mallnav.Dialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="materialButtonStyle">@style/Theme.Mallnav.Button.Blue</item>
    </style>


    <style name="Theme.Mallnav.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemBackground">@null</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemTextAppearanceActive">@style/Theme.Mallnav.TextAppearance.Active</item>
        <item name="itemTextAppearanceInactive">@style/Theme.Mallnav.TextAppearance.InActive</item>
        <item name="menu">@menu/menu_mallnav</item>
    </style>

    <style name="Theme.Mallnav.TextAppearance.Active" parent="">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Mallnav.TextAppearance.InActive" parent="">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Mallnav.BottomSheet.Theme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="bottomSheetStyle">@style/Theme.Mallnav.BottomSheet.Style</item>
    </style>

    <style name="Theme.Mallnav.BottomSheet.Style" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@style/Theme.Mallnav.BottomSheet.Shape</item>
    </style>

    <style name="Theme.Mallnav.BottomSheet.Shape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Theme.Mallnav.Search" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:background">@drawable/bg_rounded_search</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:textSize">17sp</item>
        <item name="defaultQueryHint">@string/search_title</item>
        <item name="iconifiedByDefault">false</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:focusable">false</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="Theme.Mallnav.Search.Companion.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Theme.Mallnav.Button.Close" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/dialog_btn_close</item>
        <item name="android:layout_height">@dimen/dialog_btn_close</item>
        <item name="iconTint">@color/colorTextPrimary</item>
        <item name="backgroundTint">@color/colorBackground</item>
        <item name="rippleColor">@color/colorSecondary</item>
        <item name="icon">@drawable/ic_close</item>
        <item name="iconSize">@dimen/login_sheet_close_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">@dimen/btn_icon_inset</item>
        <item name="iconPadding">@dimen/btn_icon_inset</item>
        <item name="android:insetTop">@dimen/btn_icon_inset</item>
        <item name="android:insetBottom">@dimen/btn_icon_inset</item>
        <item name="android:insetLeft">@dimen/btn_icon_inset</item>
        <item name="android:insetRight">@dimen/btn_icon_inset</item>
        <item name="shapeAppearanceOverlay">
            @style/Theme.Mallnav.Button.Close.Shape
        </item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Theme.Mallnav.Button.Close.Shape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Mallnav.Button.Blue" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="backgroundTint">@color/selector_btn_blue</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/circe_bold</item>
    </style>

    <style name="Theme.Mallnav.List.Item.TextView.Venue.Name" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="Theme.Mallnav.TextView.Warning" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorErrorBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/warning_padding</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">@dimen/warning_text</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mallnav" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

</resources>